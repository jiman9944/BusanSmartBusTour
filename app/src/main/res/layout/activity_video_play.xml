<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="820dp"
    android:layout_height="538dp"
    tools:context="kr.co.ubitec.smartbusanculturetourguide.VideoPlayActivity">

    <LinearLayout
    android:layout_width="820dp"
    android:layout_height="550dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">

    <VideoView
        android:id="@+id/VideoViewTourCont"
        android:layout_width="800dp"
        android:layout_height="500dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="3dp"
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:background="@drawable/ic_volume_up_black_24dp" />

        <SeekBar
            android:layout_marginTop="23dp"
            android:id="@+id/seekBar"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:gravity="right|bottom"
            android:onClick="onClick_exit"
            android:text="EXIT"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>


</android.support.constraint.ConstraintLayout>
